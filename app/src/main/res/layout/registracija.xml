<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRegistracija">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/TextViewRegistracija"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginStart="44dp"
          android:layout_marginLeft="44dp"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="44dp"
          android:layout_marginRight="44dp"
          android:gravity="center"
          android:text="Registracija"
          android:textSize="30sp" />

      <TextView
          android:id="@+id/textView14"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginStart="44dp"
          android:layout_marginLeft="44dp"
          android:layout_marginEnd="44dp"
          android:layout_marginRight="44dp"
          android:layout_marginTop="65dp"
          android:text="Korisničko ime:"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/textView15"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginStart="44dp"
          android:layout_marginLeft="44dp"
          android:layout_marginTop="155dp"
          android:layout_marginEnd="44dp"
          android:layout_marginRight="44dp"
          android:text="Lozinka:"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginStart="44dp"
          android:layout_marginLeft="44dp"
          android:layout_marginTop="245dp"
          android:layout_marginEnd="44dp"
          android:layout_marginRight="44dp"
          android:text="Ime:"
          android:textSize="24sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="335dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:text="Prezime:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="425dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:text="Adresa:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="515dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:text="Broj telefona:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="605dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:text="E-mail:"
            android:textSize="24sp" />

      <Button
          android:id="@+id/btnRegistrujSe"
          android:layout_width="236dp"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="725dp"
          android:layout_marginBottom="30dp"
          android:background="@color/colorRegButton"
          android:text="Registruj se" />

        <EditText
            android:id="@+id/editKorisnickoIme2"
            android:layout_width="711dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView15"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:layout_marginBottom="-147dp"
            android:hint="Unesite korisničko ime"
            android:ems="10"
            android:inputType="textPersonName" />

      <EditText
          android:id="@+id/editLozinka2"
          android:layout_width="711dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textView15"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginStart="44dp"
          android:layout_marginLeft="44dp"
          android:layout_marginEnd="44dp"
          android:layout_marginRight="44dp"
          android:hint="Unesite lozinku"
          android:ems="10"
          android:inputType="textPassword" />

      <EditText
          android:id="@+id/editIme"
          android:layout_width="711dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textView4"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginStart="44dp"
          android:layout_marginLeft="44dp"
          android:layout_marginEnd="44dp"
          android:layout_marginRight="44dp"
          android:hint="Unesite ime"
          android:ems="10"
          android:inputType="textPersonName" />

      <EditText
          android:id="@+id/editPrezime"
          android:layout_width="711dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textView16"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginStart="44dp"
          android:layout_marginLeft="44dp"
          android:layout_marginEnd="44dp"
          android:layout_marginRight="14dp"
          android:hint="Unesite prezime"
          android:ems="10"
          android:inputType="textPersonName" />

      <EditText
          android:id="@+id/editAdresa"
          android:layout_width="711dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textView18"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginStart="44dp"
          android:layout_marginLeft="44dp"
          android:layout_marginEnd="44dp"
          android:layout_marginRight="14dp"
          android:hint="Unesite adresu"
          android:ems="10"
          android:inputType="textPersonName" />

      <EditText
          android:id="@+id/editBrTelefona"
          android:layout_width="711dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textView19"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginStart="44dp"
          android:layout_marginLeft="44dp"
          android:layout_marginEnd="44dp"
          android:layout_marginRight="44dp"
          android:hint="Unesite broj telefona"
          android:ems="10"
          android:inputType="phone" />

      <EditText
          android:id="@+id/editEmail"
          android:layout_width="711dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textView20"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginStart="44dp"
          android:layout_marginLeft="44dp"
          android:layout_marginEnd="44dp"
          android:layout_marginRight="14dp"
          android:hint="Unesite e-mail adresu"
          android:ems="10"
          android:inputType="textEmailAddress" />

    </RelativeLayout>
</ScrollView>