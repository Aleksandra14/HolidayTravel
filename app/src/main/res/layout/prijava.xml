<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bela"
    tools:context=".PrijavaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtViewPrijava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:gravity="center"
            android:text="Prijava"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:layout_marginTop="65dp"
            android:text="Korisničko ime:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="155dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:text="Lozinka:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextKorisnickoIme"
            android:layout_width="711dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView14"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:layout_marginBottom="-147dp"
            android:hint="Unesite korisničko ime"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="isi" />

        <EditText
            android:id="@+id/editTextLozinka"
            android:layout_width="711dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:hint="Unesite lozinku"
            android:inputType="textPassword"
            android:ems="10"
            android:text="isi" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleText"
            android:layout_below="@id/textView15"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:clickable="true"
            android:paddingTop="12dp"
            android:text="prikazi"
            android:textColor="@color/bela"
            />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/togglePass"
            android:layout_below="@id/textView15"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:clickable="true"
            android:paddingTop="12dp"
            android:background="@color/bela"
            android:src="@drawable/ic_visibility_black_24dp"
            />
        <!--<android.support.design.widget.TextInputLayout
            android:id="@+id/editTextLozinka"
            android:layout_width="711dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            app:passwordToggleEnabled="true"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Unesite lozinku"
                android:ems="10"/>
        </android.support.design.widget.TextInputLayout> -->

        <Button
            android:id="@+id/btnPrijaviSe"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400dp"
            android:layout_marginBottom="3dp"
            android:background="@color/colorPrimary"
            android:text="Prijavi se" />

    </RelativeLayout>
</ScrollView>