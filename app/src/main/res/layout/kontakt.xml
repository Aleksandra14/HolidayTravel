<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onamaslika33">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtKontakt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:gravity="center"
            android:text="Kontakt"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/txtPosl"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/txtKontakt"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:text="Poslovnice:"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/txtPoslovnica1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPosl"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/bela"
            android:textSize="16sp"
            android:text="Poslovnica 1"
            android:textStyle="bold"
            android:typeface="serif"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/txtPoslovnica2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPoslovnica1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/bela"
            android:textSize="16sp"
            android:text="Poslovnica 2"
            android:textStyle="bold"
            android:typeface="serif"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/txtPoslovnica3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPoslovnica2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:textColor="@color/bela"
            android:textSize="16sp"
            android:text="Poslovnica 3"
            android:textStyle="bold"
            android:typeface="serif"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/txtTel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPosl"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="Telefon 1"
            android:linksClickable="true"
            android:autoLink="all"
            android:clickable="true"
            android:textColor="@color/bela"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/txtTel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTel1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:clickable="true"
            android:text="Telefon 2"
            android:autoLink="phone"
            android:textColor="@color/bela"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/txtTel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTel2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="Telefon 3"
            android:autoLink="phone"
            android:textColor="@color/bela"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:fontFamily="serif" />


        <TextView
            android:id="@+id/txtMapa"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:text="Pronadjite najbliÅ¾u poslovnicu: (Google maps)"
            android:background="@color/colorProvidna"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            app:fontFamily="serif" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_below="@id/txtMapa"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="65dp"
            android:layout_marginRight="14dp" />


